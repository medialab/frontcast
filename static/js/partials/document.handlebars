<div class="box {{#if abstract}}size12 {{/if}}" style="overflow:hidden">
  <div class="tags">
    <span class="date">
      {{#foreach tags.Date}}<span class="tag date">{{this.name}}</span>{{#unless this.$last}}, {{/unless}}{{/foreach}}
    </span>
    <span class="type">{{type}}</span>
  </div>

  <h2>{{title}}</h2>

  {{#if abstract}}
  <div class="abstract">{{{abstract}}}</div>
  {{/if}}

  <div class="thumb" >
    <img src="{{attachments.thumb.src}}"/>
  </div>
  <!-- 

  {{#if tags.Institution.length}}
    &middot;
    <span class="institutions">
      {{#foreach tags.Institution}}<span class="tag institution">{{this.name}}</span>{{#unless this.$last}}, {{/unless}}{{/foreach}}
    </span>
    {{/if}}

  -->
  <div class="actions">
    <a href="/#{{#url "d" "slug" slug}}{{/url}}">view</a>
  </div>
</div>