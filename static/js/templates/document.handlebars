<div class="document pin {{status}} {{#each tags.RATING}}{{this.name}}_grade {{/each}}" data-slug="{{slug}}" data-type="{{type}}" data-href="/#{{#url "d" "slug" slug}}{{/url}}" data-id="{{id}}" id="d-{{id}}">
  <div class="inner">
    <div class="pusher"></div>
    <div class="status">{{status}}</div>
    <div class="tags">
      {{#foreach tags.Date}}<span class="tag date">{{this.name}}</span>{{#unless this.$last}}, {{/unless}}{{/foreach}}
      
      
      <!--
      {{#each tags.AUTHOR}}
        {{this.name}} -
      {{/each}}
    -->
    </div>
    <h3>{{title}}</h3>
    {{#if tags.Institution.length}}
    <div class="tags">
        {{#foreach tags.Institution}}
          <span class="tag">{{this.name}}</span>{{#unless this.$last}}, {{/unless}}
        {{/foreach}}
      {{/if}}
    </div>
    
    {{#each attachments}}
      {{#if_in this.ext compare="pdf"}}
      <div class="actions">
        <a class="button" href="mais_dossier.pdf"><i class="icon-download"></i> download print version</a>
      </div>
      {{/if_in}}
    {{/each}}

    {{#if attachments.length}}
    <div class="attachments slider">
      <ul>
      {{#each attachments}}
        {{#if_eq this.type compare="image"}}
          <li><img src="{{this.src}}"/></li>
        {{/if_eq}}
        {{#if_eq this.type compare="video"}}
          <li>
            <video id="{{this.id}}" class="video-js vjs-default-skin"
              controls preload="auto" width="100%" height="264"
              poster="{{this.poster}}">
             <source src="{{this.src}}" type='video/mp4' />
            </video>
            <script>
              videojs("{{this.id}}", {}, function(){
                  // Player (this) is initialized and ready.
              });
            </script>
          </li>
        {{/if_eq}}
      {{/each}}
      </ul>
    </div>
    {{/if}}
  

    <div class="abstract">{{{abstract}}}<!--{{type}}--></div>

    <hr/>

    {{#unless_eq reference compare=""}}
    <div class="mla">
      <span data-reference-id="{{reference}}"></span>
      {{#if permissions}}
        {{#if_eq permissions compare="CAN_EDIT"}}
          <a href="{{settings.base_url}}/#{{#url "re" "slug" this.slug}}{{/url}}" title="edit bibliographic reference"><i class="icon-pencil"></i></a>
        {{/if_eq}}
      {{/if}}
    </div>
    <hr/>
    {{/unless_eq}}
    
    {{#if permissions}}
    <div class="actions">
      <ul>
        
        {{#if_eq permissions compare="CAN_EDIT"}}
          <li><a href="{{settings.base_url}}/#{{#url "de" "slug" this.slug}}{{/url}}">edit</a></li>
          {{#unless_eq status compare="public"}}
          <li>publish</li>
          {{/unless_eq}}
        {{/if_eq}}
        
      </ul>
    </div>
    {{/if}}
    <div class="authors">
      
      by <a href="{{settings.base_url}}/#{{#url "u" "username" owner}}{{/url}}">{{owner}}</a>
      {{#each authors}}
        <a href="{{settings.base_url}}/#{{#url "u" "username" this}}{{/url}}">{{this}}</a>
      {{/each}}
    </div>
  </div>
  
</div>
