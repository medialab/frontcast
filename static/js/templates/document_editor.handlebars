<div id="document-editor">
  <div class="pusher"></div>
  <div class="status"></div>
  <input type="hidden" name="type" value="{{type}}"/>
  <input type="hidden" name="language" value="{{language}}"/>
  
  <h3><textarea name="title" placeholder="Describe yourself with 4 words...">{{title}}</textarea></h3>
	<div class="abstract"><textarea name="abstract" placeholder="Describe yourself with max 160 chars">{{abstract_raw}}</textarea></div>
  <div class="content">
    <div class="inner">
      Full text
      <textarea name="content" placeholder="Describe yourself with some basic html">{{content_raw}}</textarea>
    </div>
  </div>
  <div class="permalink">
    <div class="inner">
      Copy and Paste a
      <textarea name="permalink" placeholder="http://vimeo.com/">{{permalink}}</textarea>
    </div>
  </div>


  {{#if_eq reference compare=''}}

  {{else}}
    <div class="reference">
      <textarea name="reference" readonly placeholder="forccast reference identifier">{{reference}}</textarea>
    </div>
  {{/if_eq}}

  <div class="attachments">
    <div class="inner">
      Remote media (one per line);
      <textarea name="remote">{{remote}}</textarea>
    </div>
    <div class="slider" data-plugin="unslider">
      <ul>
      {{#foreach attachments}}
        <li>
          {{#if_in ext compare='jpg|gif'}}
            <img src='{{src}}' style='width:100%'/>
          {{/if_in}}
        </li>
      {{/foreach}}
      </ul>
      <div style="clear:left"></div>
    </div>
  </div>

  {{#if_eq type compare='video'}}
  	<div class="permalink">
  		Copy and Paste a
  		<textarea name="permalink" placeholder="http://vimeo.com/">{{permalink}}</textarea>
  	</div>
  	<h3>
		<textarea name="title" placeholder="Describe yourself with 4 words...">{{title}}</textarea>
	</h3>
	<div class="abstract">
		<textarea name="abstract" placeholder="Describe the video with max 160 chars">{{abstract}}</textarea>
	</div>
	<div class="content">{{content}}</div>
  {{/if_eq}}
  
  {{#if_eq type compare='picture'}}
    <div class="permalink">
      Copy and Paste a flickr link
      <textarea name="permalink" placeholder="http://vimeo.com/">{{permalink}}</textarea>
    </div>
    <h3>
      <textarea name="title" placeholder="picture title (will be automatically filled)">{{title}}</textarea>
    </h3>
  <div class="abstract">
    <textarea name="abstract" placeholder="Describe the picture with max 160 chars">{{abstract}}</textarea>
  </div>
  <div class="content">{{content}}</div>
  {{/if_eq}}

  <div class="tags">
    
  </div>
  <div class="authors">
    <button class="save-document">save</button>
  </div>
</div>
